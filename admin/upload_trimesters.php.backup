<?php
/**
 * Upload Trimesters from CSV
 */
session_start();
if (!isset($_SESSION['admin_logged_in'])) {
    header('Location: login.php');
    exit;
}

require_once('../config/database.php');

$message = '';
$message_type = '';

if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_FILES['file'])) {
    $file = $_FILES['file'];
    $file_ext = strtolower(pathinfo($file['name'], PATHINFO_EXTENSION));
    
    if ($file_ext !== 'csv') {
        $message = 'Invalid file type. Please upload CSV file.';
        $message_type = 'error';
    } else {
        $uploaded_file = $file['tmp_name'];
        $trimesters = [];
        
        if (($handle = fopen($uploaded_file, 'r')) !== FALSE) {
            $header = fgetcsv($handle); // Skip header row
            while (($data = fgetcsv($handle)) !== FALSE) {
                if (count($data) >= 7 && !empty($data[0])) {
                    $trimesters[] = [
                        'code' => trim($data[0]),
                        'name' => trim($data[1]),
                        'type' => trim($data[2]),
                        'year' => (int)trim($data[3]),
                        'start_date' => trim($data[4]),
                        'end_date' => trim($data[5]),
                        'is_current' => (int)trim($data[6])
                    ];
                }
            }
            fclose($handle);
        }
        
        if (!empty($trimesters)) {
            // If any trimester is set as current, unset all existing current flags
            $has_current = false;
            foreach ($trimesters as $trim) {
                if ($trim['is_current'] == 1) {
                    $has_current = true;
                    break;
                }
            }
            
            if ($has_current) {
                $conn->query("UPDATE trimesters SET is_current = FALSE");
            }
            
            $inserted = 0;
            $skipped = 0;
            
            foreach ($trimesters as $trim) {
                $stmt = $conn->prepare("INSERT INTO trimesters (trimester_code, trimester_name, trimester_type, year, start_date, end_date, is_current) VALUES (?, ?, ?, ?, ?, ?, ?) ON DUPLICATE KEY UPDATE trimester_name = VALUES(trimester_name), start_date = VALUES(start_date), end_date = VALUES(end_date), is_current = VALUES(is_current)");
                $stmt->bind_param('ssssssi', $trim['code'], $trim['name'], $trim['type'], $trim['year'], $trim['start_date'], $trim['end_date'], $trim['is_current']);
                
                if ($stmt->execute()) {
                    if ($stmt->affected_rows > 0) {
                        $inserted++;
                    } else {
                        $skipped++;
                    }
                }
                $stmt->close();
            }
            
            $message = "‚úÖ Upload complete! Inserted/Updated: $inserted trimesters. Skipped: $skipped";
            $message_type = 'success';
        }
    }
}

$result = $conn->query("SELECT * FROM trimesters ORDER BY year DESC, trimester_code DESC");
$existing_trimesters = $result->fetch_all(MYSQLI_ASSOC);
